{
  "manifest_version": 2,

  "name": "InfoOven",
  "description": "Maximize large screen displays using rotating chrome tabs to display your most important information. Highly configurable.",
  "version": "1.0",

  "homepage_url": "http://github.com/markbouchard/InfoOven",

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "16": "icon-small.png",
    "48": "icon-medium.png",
    "128": "icon-large.png"
  },

  "commands": {
    "toggle-infooven": {
      "suggested_key": { "default": "Alt+Shift+I" },
      "description": "Toggle InfoOven"
    }
  },

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "InfoOven - Let's cook!"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "background",
    "tabs"
  ]
}